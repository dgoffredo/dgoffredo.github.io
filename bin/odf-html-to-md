#!/bin/sh

xmllint --format --html - | \
sed -e 's/ class="[^"]*"//g' \
    -e 's/<span[^>]*>//g' \
    -e 's/<\/span>//g' \
    -e '/^<p\>/!d' \
    -e "s/&rsquo;/'/g" \
    -e "s/&lsquo;/'/g" \
    -e 's/&rdquo;/"/g' \
    -e 's/&ldquo;/"/g' \
    -e 's/&nbsp;/ /g' \
    -e 's/<\/p>/\n/g' \
    -e 's/<p>//g' \
    -e 's,<img .*src="\([^"]\+\.jpg\)"[^>]*>,![](\1),' \
    -e 's/&ndash;/â€“/g' | \
cat -s

